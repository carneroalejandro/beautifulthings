<?xml version='1.0' encoding='utf-8'?>
<widget
  id="com.unixono.beautifulthings"
  version="0.1.0"
  android-versionCode="1"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
  <name>BeautifulThings</name>
  <description>Unixono - Developing BeautifulThings</description>
  <author email="contacto@unixono.com" href="http://unixono.com">Unixnono</author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <preference name="Orientation" value="portrait" />
  <platform name="android">
    <allow-intent href="market:*" />
    <icon density="ldpi" src="res/icon/android/mipmap-ldpi/ic_launcher.png" />
    <icon density="mdpi" src="res/icon/android/mipmap-mdpi/ic_launcher.png" />
    <icon density="hdpi" src="res/icon/android/mipmap-hdpi/ic_launcher.png" />
    <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <icon src="res/icon/ios/Icon-App-20x20@1x.png" />
    <icon src="res/icon/ios/Icon-App-20x20@2x.png" />
    <icon src="res/icon/ios/Icon-App-20x20@3x.png" />
    <icon src="res/icon/ios/Icon-App-29x29@1x.png" />
    <icon src="res/icon/ios/Icon-App-29x29@2x.png" />
    <icon src="res/icon/ios/Icon-App-29x29@3x.png" />
    <icon src="res/icon/ios/Icon-App-40x40@1x.png" />
    <icon src="res/icon/ios/Icon-App-40x40@2x.png" />
    <icon src="res/icon/ios/Icon-App-40x40@3x.png" />
    <icon src="res/icon/ios/Icon-App-57x57@1x.png" />
    <icon src="res/icon/ios/Icon-App-57x57@2x.png" />
    <icon src="res/icon/ios/Icon-App-60x60@1x.png" />
    <icon src="res/icon/ios/Icon-App-60x60@2x.png" />
    <icon src="res/icon/ios/Icon-App-60x60@3x.png" />
    <icon src="res/icon/ios/Icon-App-72x72@1x.png" />
    <icon src="res/icon/ios/Icon-App-72x72@2x.png" />
    <icon src="res/icon/ios/Icon-App-76x76@1x.png" />
    <icon src="res/icon/ios/Icon-App-76x76@2x.png" />
    <icon src="res/icon/ios/Icon-App-76x76@3x.png" />
    <icon src="res/icon/ios/Icon-App-83.5x83.5@2x.png" />
    <icon src="res/icon/ios/Icon-Small-50x50@1x.png" />
    <icon src="res/icon/ios/Icon-Small-50x50@2x.png" />
  </platform>
  <engine name="android" spec="~7.0.0" />
  <plugin name="cordova-plugin-secure-storage" spec="^2.6.8" />
  <plugin name="cordova-plugin-local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications.git" />
</widget>
