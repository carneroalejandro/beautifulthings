<?xml version='1.0' encoding='utf-8'?>
<widget
  id="com.unixono.beautifulthings"
  version="0.1.0"
  android-versionCode="1"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
  <name>BeautifulThings</name>
  <description>Unixono - Developing BeautifulThings</description>
  <author email="contacto@unixono.com" href="http://unixono.com">Unixnono</author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <preference name="Orientation" value="portrait" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <engine name="android" spec="~7.0.0" />
  <plugin name="cordova-plugin-secure-storage" spec="^2.6.8" />
  <plugin name="cordova-plugin-local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications.git" />
</widget>
